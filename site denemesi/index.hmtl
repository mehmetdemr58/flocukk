.navbar {  
    background-color: #333; /* Navbar arka plan rengi */  
}  

.navbar-menu {  
    display: flex;              /* Flexbox düzenine geçiş */  
    justify-content: center;    /* Öğeleri yatayda ortalar */  
    list-style: none;          /* Madde işaretlerini kaldır */  
    padding: 0;                /* İnternal padding'i kaldır */  
    margin: 0;                 /* Dışarıda margin'i kaldır */  
}  

.navbar-item {  
    color: white;              /* Öğelerin yazı rengi */  
    padding: 15px 20px;       /* Üst-alt ve sağ-sol padding */  
    text-align: center;        /* Metni merkezde hizala */  
}  

/* Navbar genel stilleri */
.navbar {
    background-color: #333;
    padding: 5px;  /* Navbar'ın yüksekliğini azaltır */
}

/* Navbar elemanları */
.navbar ul {
    list-style-type: none;
    margin: 0;
    padding: 0;
    display: flex;
}

/* Linkler */
.navbar ul li {
    margin-right: 20px; /* Menü öğeleri arasındaki boşluk */
}

.navbar ul li a {
    text-decoration: none;
    color: white;
    padding: 5px 10px; /* Menü öğelerinin boyutunu küçültür */
    font-size: 14px;  /* Yazı boyutunu küçültür */
}

.navbar ul li a:hover {
    background-color: #575757; /* Hover efekti */
}
















